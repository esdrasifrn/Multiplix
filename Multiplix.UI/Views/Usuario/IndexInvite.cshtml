
@{
    ViewData["Title"] = "IndexInvite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumbs{
    <div class="content-header-left col-md-6 col-12 mb-2">
        <h3 class="content-header-title mb-0">Link de indicação (convite)</h3>
        <div class="row breadcrumbs-top">
            <div class="breadcrumb-wrapper col-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/Home/Dashboard">Home</a>
                    </li>
                    <li class="breadcrumb-item active">
                        Link de indicação
                    </li>
                </ol>
            </div>
        </div>
    </div>    
    }

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Compartilhe o link com os seus amigos para fazerem parte da sua rede</div>
            </div>
            <div class="card-body">
                <form method="post" id="form-parceiro" class="form form-horizontal">
                    <div class="form-body">
                        <h4 class="form-section"><i class="ft-user"></i> Seu link</h4>
                        <div class="form-group row">
                            <label class="col-md-3 label-control" for="Nome">Link de indicação</label>
                            <div class="col-md-9 mx-auto">
                                <input type="text" id="Nome"  class="form-control" value="http://www.multiplyx.com.br/Usuario/invite/@ViewBag.LinkConvite" placeholder="Descrição" name="RamoAtividadeNome">
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        @*<a href="https://web.whatsapp.com/send?text=http://http://www.multiplyx.com.br/Usuario/invite/@ViewBag.LinkConvite" target="_blank" class="btn btn-social btn-min-width mr-1 mb-1 btn-success"><span class="la la-whatsapp font-medium-3"></span>Whatsapp</a>
        <a href="https://www.facebook.com/sharer/sharer.php?u=http://www.multiplyx.com.br/Usuario/invite/@ViewBag.LinkConvite" target="_blank" class="btn btn-social btn-min-width mr-1 mb-1 btn-facebook"><span class="la la-facebook font-medium-3"></span>Facebook</a>*@

                        @if (ViewBag.DeviceType == "Mobile"){
                        <a href="whatsapp://send?text=http://www.multiplyx.com.br/Usuario/invite/@ViewBag.LinkConvite" class="btn btn-social btn-min-width mr-1 mb-1 btn-success" data-action="share/whatsapp/share"><span class="la la-whatsapp font-medium-3"></span>Whatsapp</a>
                        }else{
                        <a href="https://web.whatsapp.com/send?text=http://www.multiplyx.com.br/Usuario/invite/@ViewBag.LinkConvite" target="_blank" class="btn btn-social btn-min-width mr-1 mb-1 btn-success"><span class="la la-whatsapp font-medium-3"></span>Whatsapp</a>
                        }

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


